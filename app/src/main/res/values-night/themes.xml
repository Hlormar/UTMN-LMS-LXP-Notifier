<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LMSNotifier" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/utmn</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonPasscode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundTint">@color/btn_gray_dark</item>
        <item name="android:background">@drawable/bg_passcode_ripple</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ViewPasscode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:background">@drawable/bg_passcode</item>
        <item name="android:backgroundTint">@color/view_gray_dark</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="ButtonDeleteInput" parent="Widget.AppCompat.ImageButton">
        <item name="srcCompat">@drawable/ic_input_delete_ripple</item>
        <item name="tint">@android:color/secondary_text_dark</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ProgressBarCircle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:indeterminateTint">@color/utmn</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>